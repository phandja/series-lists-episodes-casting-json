<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/bg_episode_rounded"
    android:elevation="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_name"
        style="@style/EpisodeText.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Episode Name" />

    <TextView
        android:id="@+id/text_episode"
        style="@style/EpisodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="S01E01" />

    <TextView
        android:id="@+id/text_summary"
        style="@style/EpisodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        tools:text="bla bla bla bla bla bla bla\nbla bla bla bla bla " />
</LinearLayout>